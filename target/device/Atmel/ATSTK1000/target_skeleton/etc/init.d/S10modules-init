#!/bin/sh

MODPROBE=`which modprobe`

echo -n " * probing modules ...           "
if [ ! -x "${MODPROBE}" -o ! -f "/etc/modules" ]; then
	echo "[ MISSING ]"
	exit 1
else
	echo
fi

grep '^[^#]' "/etc/modules" | \
while read module args; do
	[ "$module" ] || continue
	if ${MODPROBE} $module $args > /dev/null 2> /dev/null; then
		echo "    * $module loaded"
	else
		echo "    * $module failed"
	fi
done

exit 0
