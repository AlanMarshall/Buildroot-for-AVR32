#!/bin/sh

PROGRAM=/usr/sbin/alsactl

# Exit silently if alsa-utils isn't installed
[ -x ${PROGRAM} ] || exit 0

echo -n " * restoring mixer state ...     "
if [ ! -f /etc/asound.state ]; then
	echo "[ MISSING ]"
	exit 1
fi

if ${PROGRAM} restore > /dev/null 2> /dev/null; then
	echo "[   OK   ]"
else
	echo "[ FAILED ]"
	exit 1
fi
